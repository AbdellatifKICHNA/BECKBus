<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <EditText
        android:id="@+id/set_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="70dp"
        android:padding="6dp"
        />

    <EditText
        android:id="@+id/set_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PrÃ©nom"
        android:layout_below="@id/set_last_name"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        />

    <EditText
        android:id="@+id/set_user_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_first_name"
        android:layout_centerInParent="true"
        android:hint="Age"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/chooser_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@+id/set_user_age"
        android:entries="@array/cycle" />

    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="#0955A8"
        android:layout_below="@id/set_user_age"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:textAllCaps="false"/>

</RelativeLayout>