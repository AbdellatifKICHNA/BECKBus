<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TarifsActivity">

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="200dp">
        <View
            android:layout_height="3dip"
            android:layout_width="match_parent"
            android:background="#ff0000"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/table_row1"
            android:padding="10dp">

            <TextView
                android:id="@+id/ligne"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="Ligne"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/trajet"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Trajet"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:textColor="#000"
                android:id="@+id/tarif"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Tarif"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </TableRow>
        <View
            android:layout_height="3dip"
            android:layout_width="match_parent"
            android:background="#ff0000"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/table_row2"
            android:padding="10dp">

            <TextView
                android:id="@+id/ligne1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="01"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/trajet1"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Riad Salam -> Mghila"
                android:textSize="17dp"/>
            <TextView
                android:textColor="#000"
                android:id="@+id/tarif1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="3 Dhs"
                android:textSize="17dp"/>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/table_row3"
            android:padding="10dp">

            <TextView
                android:id="@+id/ligne2"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="22"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/trajet2"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Ouled Ayad -> BÃ©ni Mellal"
                android:textSize="17sp"/>
            <TextView
                android:textColor="#000"
                android:id="@+id/tarif2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="9 Dhs"
                android:textSize="17sp"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>